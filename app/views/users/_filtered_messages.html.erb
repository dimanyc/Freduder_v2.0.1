
<% if @messages.count < 0 %>
		<div class="well">Please <%=link_to 'load your Tweets',analyze_path %> to be able to filter through them</div>
<% elsif @messages.count >= 1 && @filtered_messages == [] %>
		<div class="well">Your "Filtered Messages" queue is currently empty. Please <%=link_to 'filter your current feed',analyze_path %> or adjust your tags</div>

    
<% else %>
        <% @filtered_messages.each do |filter| %>
        <div class="panel panel-default">
          <div class="panel-heading">
          by <b><%=filter.author%></b> &nbsp;|&nbsp; slipped at:<b> "<%=filter.slipped.join(" ")%>"</b>
            <div class="pull-right">
            <%= image_tag(filter.author_image_url, class: "author-pic img-circle") %>
            </div>

          </div><!--end_.panel-heading-->
          <div class="panel-body">
            <%=filter.body%>
          </div><!--end_panel-body-->
        </div><!--end_.panel panel-default-->
        <% end %>
<% end %>

