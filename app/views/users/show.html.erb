<div class="col-md-3 col-lg-3 col-xl-3 col-sm-6 col-xs-6">

  <!--Profile Image-->
  <section id="profile-image">
     <div class="thumbnail">

    <%= image_tag(@image) %>
      <div class="caption">
      <h3><span class="glyphicon glyphicon-user" aria-hidden="true"> </span> <%= current_user.username %></h3>
      </div><!--end_.caption-->
    </div><!--end_.thumbnail-->
  </section>

  <!--Tags-->
  <section id="user-tags">
      <ul class="list-group" id="tag-list"><% @user_filters.each_with_index do |i,n| %>
        <li class="list-group-item tag">
          <span class="badge green"><%= i.messages.uniq.count if i.messages.uniq.count >= 1%></span>
          <%= i.name %>
          
          <span class="badge pull-right">
          <%= link_to filter_path(i), method: :delete, data:{confirm: "Are You Sure you want to delete tag \"#{i.name}\"?", disable_with: "Deleting..."}, remote: true  do %>
          <span class="list-group-addon glyphicon glyphicon-remove"></span><%end%>
          </span>

        </li><% end %>
      </ul>

    <%= link_to new_user_filter_path(current_user), class: "btn btn-primary", id: "#filter-form-toggler", data: { disable_with: "Loading..." }, remote: true do %>
    <span class="glyphicon glyphicon-tags" aria-hidden="true"> </span>  Create New Tag
    <% end %>
    <div id="filter-form-toggle">
    <%= render 'filters/form' %>
    </div>
  
  </section>    
</div><!--end_col-md-3-->    


<!--Pane container-->
<div class="col-md-9">
<section id="profile-messages">
  <!--Pane Nav Tabs-->
  <ul class="nav nav-tabs right-to-left">

    <li class="active"><a href="#all-messages" data-toggle="tab"><span class="glyphicon glyphicon-bullhorn" aria-hidden="true"></span>&nbsp; All Messages <span class="badge"><%=@messages.count%></span></a></li>

    <li><a href="#filtered-messages" data-toggle="tab"><span class="glyphicon glyphicon-tags" aria-hidden="true"></span>&nbsp; Filtered Messages <span class="badge"><%=@filtered_messages.count%></span></a></li>

    <li><a href="#new-tweet" data-toggle="tab"><span class="glyphicon glyphicon-comment" aria-hidden="true"></span>&nbsp; New Tweet</a></li>    

  </ul>

  <!--Panes-->

  <!--All Messages-->
  <div class="tab-content">
    <div class="tab-pane fade active in" id="all-messages">
      <div class="panel-heading">
      
        <b>All Messages:</b>
    
        <div class="pull-right">
          <span class="badge green">
            <%=link_to refresh_path do %> <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> Refresh <% end %>
          </span>
          <span class="badge">
           <%=link_to destroy_all_messages_path do %> <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete All <% end %>
          </span>
        </div><!--end_.pull-right-->
      </div><!--end_.panel-heading-->
      <%= render 'all_messages' %>

    </div><!--end_tab-pane-->


  <!--Filtered Messages-->
    <div class="tab-pane fade" id="filtered-messages">
          <div class="panel-heading">
      <b>Filtered Messages:</b>
        <div class="pull-right">
          <span class="badge green">
          <%=link_to analyze_path do %> <span class="glyphicon glyphicon-filter" aria-hidden="true"></span> Filter Messages <% end %>
          </span><!--end_.badge-->
        
        </div><!--end_pull-right-->
      </div><!--end_.panel-heading-->
       
      
      <%= render 'filtered_messages' %>
      
    </div><!--end_tab-pane-->

    <div class="tab-pane fade" id="new-tweet">
      <h4>New Tweet:</h4>

      <%= render 'messages/form' %>

    </div><!--end_tab-pane-->
          
  </div><!-- tab content -->


</section><!--end_#profile-messages-->
</div><!--end_col-md-9-->



    



