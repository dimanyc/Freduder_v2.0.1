
<h1><%= current_user.uid %></h1>
<%= image_tag(@image) %>


<br/>
<%#= link_to "Analyze", analyze_path(@user) %>

<br/>
<%= link_to new_user_filter_path(current_user), class: "btn btn-default" do %>
	<span class="glyphicon glyphicon-filter" aria-hidden="true"></span> Create Filter
<% end %>

<br/>
<h2>User Filters:</h2>
<ul>
<% @user_filters.each do |i| %>
<li><b>Name:</b> <%=i.name%> &nbsp;|&nbsp; <b>Slips:</b> <%=i.slips%> </li>
<% end %>
</ul>



<h2>All Messages:</h2>
<ul>
<% @messages.each do |i| %>
<li><%=i.body%> | <%=i.author%></li>
<% end %>
</ul>
<br/>
<%= link_to refresh_path, class: "btn btn-default" do %>
	<span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> Refresh
<% end %>

<h2>Filtered Messages:</h2>
<ul>
<% @user_filters.each do |f| %>
	<% f.messages.each do |m| %>
	<li><%= m.body %></li>
	<% end %>
<% end %>
</ul>

<h2>Send new Tweet:</h2>
<%= render 'messages/form' %>

